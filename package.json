{
  "name": "feijoada-oito",
  "version": "0.0.0",
  "private": true,
  "repository": "ninetails/feijoada-oito",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/config-lerna-scopes": "^7.5.1",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run hook:pre-commit",
      "pre-push": "npm run hook:pre-push"
    }
  },
  "scripts": {
    "clean": "lerna clean --yes 2>/dev/null || :",
    "co": "npx git-cz",
    "hook:pre-commit": "$npm_execpath run lint -- --since develop --parallel",
    "hook:pre-push": "$npm_execpath run test -- --since develop --parallel",
    "lerna:clean": "lerna run clean 2>/dev/null || :",
    "lint": "cross-env CI=true lerna run lint",
    "purge": "$npm_execpath run lerna:clean && $npm_execpath run clean && rm -rf node_modules",
    "release": "npx standard-version",
    "reset": "$npm_execpath run purge && $npm_execpath install",
    "test": "cross-env CI=true lerna run test"
  }
}
